<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Water.Views.UserDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Name: " FontSize="Medium" />
        <Label Text="{Binding User.Name}" FontSize="Small"/>
        <Label Text="Phone number: " FontSize="Medium" />
        <Label Text="{Binding User.PhoneNumber}" FontSize="Small"/>
        <Label Text="Email: " FontSize="Medium" />
        <Label Text="{Binding User.Email}" FontSize="Small"/>
        <Label Text="Water balance: " FontSize="Medium" />
        <Label Text="{Binding User.WaterBalance}" FontSize="Small"/>
        <Label Text="Consultation: " FontSize="Medium" />
        <Label Text="{Binding User.Consultation}" FontSize="Small"/>
    </StackLayout>
</ContentPage>